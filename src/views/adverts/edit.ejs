<!DOCTYPE html>
<html>

<head>
    <% include ../static/partials/head.ejs %>
</head>

<body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

        <h1>Edit Advertisement</h1>

        <!-- #1 -->
        <form action="/adverts/<%= advert.id %>/update" method="post">
            <div class="form-group">
                <label for="title">Advertisement Title</label>
                <!-- #2 -->
                <input value="<%= advert.title %>" type="text" class="form-control" name="title"
                    aria-describedby="titleHelp" placeholder="Enter Title">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <!-- #3 -->
                <textarea rows="4" class="form-control" name="description"
                    placeholder="Enter Description"><%= advert.description %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

</body>

</html>